<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SellIt!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding:0px">
    <div class="container-fluid" style="background-color: #558c2f; height:100px; width:auto">
        <div class="row">
            <div class="col-md-4" style="text-align:left">
                <img src="~/Utils/ViewsUtils/logo-sellIt.png" style="width: 90px;height: 90px; margin-left: -7px; padding-top: 5px">
            </div>
            <div class="col-md-4" style="text-align:center;font-size:35px; padding-top:25px">
                Gestion des stocks
            </div>
            <div class="col-md-4" style="text-align:right">

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer style="background-color: #558c2f; height:100px; width:100%">
        <div class="row">
            <div class="col-md-6" style="text-align:left">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
            <div class="col-md-6" style="text-align:right">
                <img src="~/Utils/ViewsUtils/logo-logisna.png" style="height: 80px; padding-top:15px;padding-right:5px">
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
